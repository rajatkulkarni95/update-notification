    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "push-version": "git add . && git commit -m 'Bumped version to $npm_package_version' && git push",
    "postmerge": "yarn bump-version-minor && push-version"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
